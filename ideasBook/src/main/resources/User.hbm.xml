<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "com.ideas2it.model.User" table = "user">
        <id name = "id" type="string" column="id" length = "36"/>

        <property name="email" column="email" type="string" length="100" unique="true" not-null="true" /> 
        <property name="password" column="password" type="string" length="100" not-null="true"/> 
        <property name="dateOfBirth" column="date_of_birth" type="LocalDate" />
        <property name="age" column="age" type="int"/>
        <property name="phoneNumber" column="phone_number" type="long" unique="true"/>         
    </class>
</hibernate-mapping>